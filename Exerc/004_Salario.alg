algoritmo "semnome"
var
   Nome: caractere
   Sala: real
inicio
   Escreva("Escreva seu nome:")
   Leia(Nome)
   Escreva("Digite seu salário:")
   Leia(Sala)
   Escreval("Nome do Funcionário: ", Nome)
   Escreval("Salário: ", Sala)
   Escreva("O Funcionário ", Nome, " tem um salário de ", Sala, " em Junho.")
fimalgoritmo
